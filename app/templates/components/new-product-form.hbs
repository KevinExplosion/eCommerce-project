{{#if addNewProduct}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>

    <div class="form-group">
      <label for="cost">Cost</label>
      {{input value=cost id="cost"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <button {{action 'saveProduct'}}>Save</button>
  </form>

  </div>
    {{else}}
      <button {{action 'productFormShow'}}>New Product</button>
    {{/if}}
